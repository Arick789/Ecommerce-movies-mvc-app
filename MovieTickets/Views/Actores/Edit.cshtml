@model Actor

@{
    ViewData["Title"] = "Editar Actor";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Actualizar Actor</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group text-center">
                        <img id="ProfilePicturePreview" class="rounded-circle" style="width: 150px; height: 150px; object-fit: cover;" />
                    </div>
                    <div class="form-group">
                        <label asp-for="FotoPerfilURL" class="control-label"></label>
                        <input asp-for="FotoPerfilURL" class="form-control" />
                        <span asp-validation-for="FotoPerfilURL" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NombreCompleto" class="control-label"></label>
                        <input asp-for="NombreCompleto" class="form-control" />
                        <span asp-validation-for="NombreCompleto" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-4">
                        <label asp-for="Bio" class="control-label"></label>
                        <input asp-for="Bio" class="form-control" />
                        <span asp-validation-for="Bio" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <div class="d-flex justify-content-between">
                            <a class="btn btn-outline-secondary" asp-action="Index">Ver todos</a>
                            <input type="submit" value="Editar" class="btn btn-outline-success" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>

        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $("#FotoPerfilURL").val();
        })

        $("#FotoPerfilURL").on("change", function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $(this).val();
        })
    </script>
}