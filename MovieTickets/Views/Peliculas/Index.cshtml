@model IEnumerable<Pelicula>

@{
    ViewData["Title"] = "Lista de Peliculas";
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @item.Nombre
                                    @* @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                                {
                                <a class="text-white float-right" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>
                                } *@
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <img src="@item.ImagenURL" width="100%" alt="@item.Nombre">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <p class="card-text">@item.Descripcion</p>
                            <p class="card-text"><b>Cinema: </b>@item.Cinema.Nombre</p>
                            <p class="card-text"><b>Categoria: </b>@item.CategoriaPelicula</p>
                            <p class="card-text"><b>Estreno: </b>@item.FechaInicio.ToString("dd MMM yy")</p>
                            <p class="card-text"><b>Finalizacion: </b>@item.FechaFinal.ToString("dd MMM yy")</p>
                            <p class="card-text ">
                                <b>Status: </b>
                                @if (DateTime.Now >= item.FechaInicio && DateTime.Now <= item.FechaFinal)
                                {
                                    <span class="badge bg-success text-white">DISPONIBLE</span>
                                }
                                else if (DateTime.Now > item.FechaFinal)
                                {
                                    <span class="badge bg-danger text-white">NO DISPONIBLE</span>
                                }
                                else
                                {
                                    <span class="badge bg-primary text-white">PROXIMAMENTE</span>
                                }
                            </p>

                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer d-flex justify-content-between">
                            <a class="btn btn-success text-white @((DateTime.Now > item.FechaFinal) ? "disabled" : "")"
                               asp-controller="Orders"
                               asp-action="AddItemToShoppingCart"
                               asp-route-id="@item.Id">
                                <i class="bi bi-cart-plus"></i> Añadir al Carrito (Price @item.Precio.ToString("c"))
                            </a>

                            <a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@item.Id">
                                <i class="bi bi-eye-fill"></i> Ver Detalles
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

